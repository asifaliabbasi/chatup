rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can upload and read their own profile pictures
    match /profile_pictures/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat images - users can upload and read images from chats they participate in
    match /chat_images/{chatId}/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Chat videos - users can upload and read videos from chats they participate in
    match /chat_videos/{chatId}/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Chat documents - users can upload and read documents from chats they participate in
    match /chat_documents/{chatId}/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Chat audio - users can upload and read audio from chats they participate in
    match /chat_audio/{chatId}/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
